<div class="container">
<h1><%= @task.title %></h1>

<div class="border-bottom" style="width: 50%">
<p class="alert alert-warning"><%= @task.details %></p>
<input class="mb-4" type="checkbox" <%= @task.completed ? "checked" : "" %>> This task <%= @task.completed ? "is" : "is not" %> completed
<%= link_to "Update", edit_path(@task) %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
</div>

<%= link_to "Back to list", tasks_path %>

</div>
